<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <Button
        android:id="@+id/My_Series"
        android:layout_width="match_parent"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="25dp"
        android:layout_height="50dp"
        android:text="My series"
        android:onClick="launchSerieListActivity"/>

    <Button
        android:id="@+id/Search_Series"
        android:layout_width="match_parent"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="25dp"
        android:layout_height="50dp"
        android:text="Add New Series"
        android:onClick="launchAddSerieListActivity"/>

    <Button
        android:id="@+id/Custom_series"
        android:layout_width="match_parent"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="25dp"
        android:layout_height="50dp"
        android:text="Create a new series" />



</LinearLayout>